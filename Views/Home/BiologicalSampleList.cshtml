@model IEnumerable<BYUArchaeologyEgypt.Models.BiologicalSample>

@{
    ViewData["Title"] = "BiologicalSampleList";
}

<h1>List of Biological Samples</h1>
<div class="font-weight-bold">
    <table class="table text-center textBack">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Burial)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.RackNum)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.BagNum)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateFound)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
            </tr>
        </thead>
        <tbody class="table-striped table-bordered">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Burial)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.RackNum)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BagNum)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateFound)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>

                    <td>
                        @if (User.IsInRole("Researcher"))
                        {
                            <a asp-action="BiologicalSampleEdit" asp-route-bsid="@item.SampleId" class="btn btn-sm buttonBack">
                                <i class="fas fa-pencil-alt">

                                </i>
                            </a>
                        }

                        <a asp-action="BiologicalSampleDetails" asp-route-bsid="@item.SampleId" class="btn btn-sm buttonBack ml-1">Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="BiologicalSampleDelete" asp-route-bsid="@item.SampleId" class="btn btn-sm buttonBackRed ml-1">
                                <i class="fas fa-trash-alt">

                                </i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>