            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalendarDateAVG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @if (User.IsInRole("Researcher"))
                {<a asp-action="BiologicalSampleEdit" asp-route-bsid="@item.SampleId">Edit</a><text> |</text>}
                <a asp-action="BiologicalSampleDetails" asp-route-bsid="@item.SampleId">Details</a>
                @if (User.IsInRole("Admin"))
                {<text> |</text> <a asp-action="BiologicalSampleDelete" asp-route-bsid="@item.SampleId">Delete</a>}
            </td>
        </tr>
}
    </tbody>
</table>
