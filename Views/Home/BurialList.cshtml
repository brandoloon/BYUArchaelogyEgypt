        <!--
            SECTION FOR PAGINATION
        -->
        <div class="col-10  font-weight-bold">
            <div page-info="@Model.PageNumberingInfo" page-classes-enabled="true"
                 page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-dark"
                 class="btn-group pull-right m-1">
            </div>

            <!--
                SECTION FOR TABLE
            -->
            <table class="table text-center textBack">
                <thead class="text-center">
                    <tr>
                        <th>
                            Location
                        </th>

                        <th>
                            Burial Number
                        </th>

                        <th>
                            Burial Depth
                        </th>

                        <th>
                            Length of Remains
                        </th>

                        <th>
                            Year Found
                        </th>

                        <th>
                            Photo
                        </th>

                        <th>
                            Biological Sample
                        </th>
                    </tr>
                </thead>
                <tbody class="table-striped table-bordered">
                    @foreach (var item in Model.Burials)
                    {
                        <tr>
                            <td>
                                @locations[item.Location - 1].LowPairNS/@locations[item.Location - 1].HighPairNS
                                @locations[item.Location - 1].BurialLocationNS
                                @locations[item.Location - 1].LowPairEW/@locations[item.Location - 1].HighPairEW
                                @locations[item.Location - 1].BurialLocationEW
                                @locations[item.Location - 1].Subplot
                            </td>

                            <td>
                                <!--
                                    We made an error in our database, so we are using this as burial number in the system.
                                -->
                                #@Html.DisplayFor(modelItem => item.Tomb_number)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Burial_depth)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Length_of_remains)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Year_found)
                            </td>

                            <td>
                                @if (item.ImgOnSystem != null || item.NoteBookOnSystem != null || item.BoneBookOnSystem != null)
                                {
                                    <p>Yes</p>
                                }
                                else
                                {
                                    <p>No</p>
                                }
                            </td>
                            <!--
                                Place holder for logic for checking if there is a biological sample
                            -->
                            <td>
                            </td>

                            <td class="w-25">
                                <a class="btn btn-sm buttonBack" asp-action="Details" asp-route-bid="@item.BurialID">Details</a>
                                @if (User.IsInRole("Researcher"))
                                {
                                    <a class="btn btn-sm buttonBack ml-1" asp-action="Edit" asp-route-id="@item.BurialID">
                                        <i class="fas fa-pencil-alt">

                                        </i>
                                    </a>}
                                @if (User.IsInRole("Admin"))
                                {<a class="btn btn-sm buttonBackRed ml-2" asp-action="Delete" asp-route-id="@item.BurialID">
                                        <i class="fas fa-trash-alt">

                                        </i>
                                    </a>}
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div page-info="@Model.PageNumberingInfo" page-classes-enabled="true"
                 page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-dark"
                 class="btn-group pull-right m-1">
            </div>

            <div>
                <p>
                    @if (User.IsInRole("Researcher"))
                    {<a class="btn buttonBack" asp-action="LocationCreate">Add New</a>}
                </p>
            </div>

        </div>
